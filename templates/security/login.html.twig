{% extends 'base.html.twig' %}

{% block title %}Login | SI2001{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .error {color: red}
</style>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    {% if app.request.get('logout') == "success" %}
                        <div class="alert alert-success">
                            {{ 'You have successfully logged out!' }}
                        </div>
                    {% endif %}
                    {% if error %}
                        <span class="error">{{ error.messageKey }}</span>
                    {% endif %}
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-signin" action="{{  path('login') }}" method="POST">
                        <div class="form-label-group">
                            <input type="text" id="inputUsername" class="form-control" placeholder="Username" name="_username" required autofocus value="{{ last_username }}">
                            <label for="inputUsername">Username</label>
                        </div>
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control" name="_password" placeholder="Password" required>
                            <label for="inputPassword">Password</label>
                        </div>
                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" id="remember_me">
                            <label class="custom-control-label" for="remember_me">Remember password</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
