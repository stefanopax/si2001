<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Home{% endblock %}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="icon" href={{ relative_path('http://localhost:8000/logo.jpg') }} />
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand navbar-left">
                <img src={{ relative_path('http://localhost:8000/logo.jpg') }} class="rounded-circle" height="42" width="42">
                SI2001
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container-fluid" id="navbarNavDropdown">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item-active">
                            <a class="nav-item nav-link active" href={{ relative_path('http://localhost:8000/user/') }}>Employees</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item-active">
                                <a class="nav-item nav-link active" href={{ relative_path('http://localhost:8000/skill/') }}>Skills</a>
                            </li>
                            <li class="nav-item-active border-right">
                                <a class="nav-item nav-link active" href={{ relative_path('http://localhost:8000/status/') }}>Marital List</a>
                            </li>
                        {% endif %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ app.user.name }}
                                {{ app.user.surname }}
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="{{ path('user_show', {'id': app.user.id}) }}">My profile</a>
                                <a class="dropdown-item" href={{ path('logout') }}>Logout</a>
                            </div>
                        </li>
                </ul>
                <ul class="navbar-nav navbar-right">
                        <form class="form-inline" method="POST" action="{{ path('user_search') }}">
                            <label>Search countries &nbsp</label>
                            <input class="form-control mr-sm-2" type="search" name="search" placeholder="Country" aria-label="Search">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    {% else %}
                         <li class="nav-item">
                             <a class="nav-link" href={{ relative_path('http://localhost:8000/login') }}>Login</a>
                         </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </body>
    {% block body %}{% endblock %}
</html>