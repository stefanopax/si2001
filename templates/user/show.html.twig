        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-light">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-link">edit</a>

    {{ include('user/_delete_form.html.twig') }}
