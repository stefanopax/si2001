{% extends 'base.html.twig' %}

{% block title %}{{ app.user.name }} {{ app.user.surname }} | SI2001{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ user.country }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td><img src="../{{ user.link }}" height="42" width="42"></td>
            </tr>
            <tr>
                <th>Status</th>
                {% if user.status.name is not defined %}
                    <td>Unknown</td>
                {% else %}
                    <td>{{ user.status.name }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Skills</th>
                <td>
                    {% for skill in user.skillIds %}
                        <button type="button" class="btn btn-warning" disabled>
                            {{ skill.name }}
                        </button>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.roleIds %}
                        <button type="button" class="btn btn-outline-info" disabled>
                            {{ role.name }}
                        </button>
                    {% endfor %}
                </td>
            </tr>

        </tbody>
    </table>
<div class="d-flex justify-content-start">
    <a href="{{ path('user_index') }}" class="btn btn-info">Back to list</a>
    &nbsp
    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-secondary">Edit</a>
    &nbsp
    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
