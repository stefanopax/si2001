{% extends 'base.html.twig' %}

{% block title %}Status | SI2001{% endblock %}

{% block body %}
    <h1>Status</h1>
    <div class="d-flex justify-content-end">
        <a class="bbtn btn-success align-content-xl-end btn-lg" href="{{ path('status_new') }}">New Status</a>
    </div>
    <table class="table table-striped table-light">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td>{{ status.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('status_show', {'id': status.id}) }}">Show</a>
                    <a class="btn btn-danger" href="{{ path('status_edit', {'id': status.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
